<%= form_with(model: task) do |f| %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :due_date %><br>
    <%= f.date_field :due_date %>
  </div>

  <div>
    <%= f.label :completed %><br>
    <%= f.check_box :completed %>
  </div>

  <br>

  <div>
    <%= f.submit %>
  </div>

<% end %>

